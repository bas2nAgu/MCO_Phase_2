<script>
    $(document).ready(function(){
        var postList = $('.index_main_feed-post');
        var posts = postList.children('.main_post');
        posts.sort(function(a, b) {
            var dateA = parseInt($(a).find('.num_vote').text());
            var dateB = parseInt($(b).find('.num_vote').text());
            return dateB - dateA;
        });
        postList.empty().append(posts);
    });
</script>
